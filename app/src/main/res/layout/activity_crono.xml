<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090808"
    tools:context=".cronoActivity">

    <Button
        android:id="@+id/iniciar"
        android:layout_width="115dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="88dp"
        android:foregroundTint="#9C27B0"
        android:freezesText="false"
        android:text="INICIAR"
        android:textColor="@color/teal_200"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCrono" />

    <Button
        android:id="@+id/reiniciar"
        android:layout_width="123dp"
        android:layout_height="44dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="16dp"
        android:text="REINICIAR"
        android:textColor="@color/teal_200"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCrono" />

    <TextView
        android:id="@+id/textCrono"
        android:layout_width="262dp"
        android:layout_height="45dp"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/digital"
        android:text="00:00:00.00"
        android:textColor="@color/white"
        android:textDirection="firstStrong"
        android:textIsSelectable="false"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/parar"
        android:layout_width="121dp"
        android:layout_height="44dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="30dp"
        android:text="PARAR"
        android:textColor="@color/teal_200"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/reiniciar"
        app:layout_constraintHorizontal_bias="0.631"
        app:layout_constraintStart_toEndOf="@+id/iniciar"
        app:layout_constraintTop_toBottomOf="@+id/textCrono" />

</androidx.constraintlayout.widget.ConstraintLayout>